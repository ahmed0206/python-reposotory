      <origin rpy="0 0 0" xyz="0 0 -0.03"/>
      <material name="white"/>
    </visual>
  </link>
  <joint name="base_to_wheel_track" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_track"/>
    <origin xyz="0 0 0"/>
  </joint-->
</robot>
